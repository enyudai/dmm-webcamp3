<div class="container">
<div class="row">
  
<div class="col-sm-12 col-md-8 col-lg-5 mx-auto">
  <h1>Editing Book</h1>
  <%= form_with model: @book do |f| %>
  
   <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
   </div>
   
   <div class="form-group">
    <label for="book_body">Opinion</label>
    <%= f.text_field :body %>
   </div>
  
  <div class="form-group">
  <%= f.submit "Update Book" %>
  </div>
  
<% end %>
</div>

</div>
</div>