<h1>Editing Book</h1>

<form>
<%= form_with model: @book do |f| %>
<label for="text-book">Title</label><br>
<%= f.text_field :title %>
<label for="text-body">Body</label><br>
<%= f.text_area :body %>
<%= f.submit 'Update Book' %>
<% end %>
</form>

