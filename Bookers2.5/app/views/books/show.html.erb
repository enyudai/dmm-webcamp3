<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info',  user: current_user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          
          <% if @book.favorited_by?(current_user) %>
          <td><%= link_to favorites_path(@book), method: :delete do %>
              ♥<%= @book.favorites.count %>
          <% end %>
          </td>
          <% else %>
           <td><%= link_to favorites_path(@book), method: :post do %>
                 ♡<%= @book.favorites.count %>
          <% end %>
           </td>
          <% end %>
          
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
          
          <td>
           <th>コメント件数：<%= @book.book_comments.count %></th>    
           <% @book.book_comments.each do |book_comment| %>
            <th><%= image_tag book_comment.user.get_profile_image(100,100) %></th>
            <%= book_comment.user.name %>
            <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
           <% end %>
          </td>
          <td>
            <%= form_with model: [@book, @comment] do |f| %>
             <%= f.text_area :comment, rows: '5' %>
             <%= f.submit "送信" %>
            <% end %>
          </td>
           
           
        </tr>
      </table>
    </div>
  </div>
</div>